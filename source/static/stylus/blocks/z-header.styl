	&.active
		overflow hidden

@media screen and (max-width:1024px)
	.wrapper,.footer
		transition all 0.45s ease
	.menu-mobile-open
		visibility visible
	.header
		.icon-search
			margin-right 50px
		.menu-list
			display none
		.header-logo
			width 130px		
		&.scrolling
			box-shadow 0px 0px 10px 0px rgba(0, 0, 0, 0.2)