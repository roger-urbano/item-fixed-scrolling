.menu-overlay
	position fixed
	top 0
	left 0
	background-color black
	z-index 1000
	width 100%
	height 100%
	opacity 0
	cursor pointer
	transition all 0.45s ease
	visibility hidden
	&.active
		opacity 0.6
		visibility visible

.menu-mobile-close, .menu-mobile-open
	border-radius 7%
	color #000
	cursor pointer
	font-size 40px
	height 42px
	line-height 42px
	position fixed
	right 15px
	text-align center
	top 10px
	// transition all 0.45s ease
	width 42px
	transform rotate(0deg)

.menu-mobile-open
	opacity 1
	visibility hidden
	z-index 1011
	&.active
		visibility hidden
		opacity 0

.menu-mobile-close
	visibility hidden
	opacity 0
	z-index 1000
	color #fff
	&.active
		visibility visible
		opacity 1
		z-index 1012
		
.menu-sidebar
	width 300px
	height 100%
	overflow auto
	position fixed
	top 0
	background white
	z-index 1000
	transition all 0.45s ease
	visibility hidden
	&.active
		visibility visible
		.menu-link
			opacity 1
			transform translateY(0%)
.menu-sidebar-cnt
	height 100%
.menu-responsive
	// padding-top 10px
	height 100%
	display flex
	flex-direction column
	.menu-item
		font-size 16px
		width 100%
		margin 0
		overflow hidden
	.menu-link
		transition all 600ms ease
		opacity 0
		transform translateY(100%)
		color #989898
		height 60px
		display flex
		align-items center
		justify-content flex-start
		padding 0 15px
